<view class='account-container gray-container'>
  <view class='account-wrapper common-user-line-wrapper'>
    <view class='text float-left'>账号资料</view>
    <view class='icon float-right'>></view>
    <view class='text float-right user-name'>樱木花道</view>
    <view class='avatar float-right'>
      <image src='../../resources/images/fenlei.png'></image>
    </view>
  </view>
  <view class='line-gray-border'></view>
  <user-line-block text='{{phoneText}}' msg='{{phone}}'></user-line-block>
  <view class='line-gray-border'></view>
  <user-line-block text='{{emailText}}' msg='{{email}}'></user-line-block>
  <view class='line-gray-border'></view>
  <user-line-block text='{{modifyPassword}}'></user-line-block>
  <view class='logout common-user-line-wrapper'>退出登录</view>
</view>
