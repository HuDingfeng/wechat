.search-container {
  position: relative;
}
.search-container .search {
  padding: 6rpx 110rpx 6rpx 30rpx;
  border: 1px solid #6a6a6a;
  border-radius: 50rpx;
}

.search-container .right-block {
  position: absolute;
  top: 0;
  right: 0;
  width: 100rpx;
  height: 100%;
  background-color: #434343;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}