.video-intro-component {
  display: block;
  margin: 0 auto;
  padding-bottom: 10rpx;
  border-radius: 10rpx;
  width: 95%;
  text-align: center;
  background: #f8f8f8;
}
.video-intro-component .img-wrapper {
  position: relative;
  width: 100%;
  height: 250rpx;
}

.video-intro-component .img-wrapper image {
  margin: 0 auto;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  width: 100%;
}

.video-intro-component .text, .video-intro-component .classify-name {
  padding-left: 10rpx; 
  font-size: 24rpx;
  text-align: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.video-intro-component .classify-name {
  color: #999999;
}

.img-play {
  position:absolute;
  width:72rpx!important;
  height:72rpx;
  display:inline-block;
  top:50%;
  left:50%;
  transform: translate3d(-50%, -50%, 0);
}