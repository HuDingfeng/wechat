<!--pages/content/content.wxml-->
<view class='content'>
  
  <view class='header'>
    <view class='logo'>
      <image src='../../resources/images/logo.png' mode='scaleToFill'></image>
    </view>  
    <view class='history'>
      <image src='../../resources/images/history.png'></image>
    </view>
    <view class='msg'>
      <image src='../../resources/images/msg.png'></image>
    </view>
  </view>
  
  <view class='search-wrapper'>
    <search class="search"></search>
    <swiper class="banner" indicator-dots="true" autoplay="autoplay" interval="5000" duration="500" circular="true" indicator-color="rgba(0, 0, 0, .8)" indicator-active-color="rgba(255, 255, 255, .3)">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <view class="slide-image">
					<view class="zoomImage" style='background-image:url({{item}})       '></view>
				</view>
      </swiper-item>
    </block>
  </swiper>
  </view>
  
  <view class='station-container'>
    <view class='line' wx:for='{{stations}}' wx:key='{{index}}'>
      <view class='station-wrapper' wx:for='{{item}}' wx:key='{{index}}'>
        <station station='{{item}}'></station>
      </view>
    </view>
  </view>
  
</view>