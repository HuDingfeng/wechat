<view class='video-page-container'> 

  <video id='myVideo' src='http://www.yanda123.com/video/testvideo.mp4' class='video' hidden="{{commentData.modelInput === '1'}}"></video>
  
  <view class='tab-wrapper'>
    <view class="text {{selected === '1'? 'selected':''}}" data-index='1' bindtap='changeSelected'>视频</view>
    <view class="text {{selected === '2'? 'selected':''}}" data-index='2' bindtap='changeSelected'>评论</view>
    <text class="{{ selected === '2'? 'text-right': 'text-left' }}"></text>
  </view>

  <view class="video-content-wrapper {{selected === '2'?'content-right':'content-left'}}" >
    <view class='vip-wrapper'>
      <view class='vip'>开通VIP，获取更多精彩内容~</view> 
    </view>
    <view class='video-intro-wrapper' bindtap='toggleHideIntro'>
      <view class='title'>{{videoData.video.episodeName}}</view>
      <view class="text {{videoData.showVideoHiddenIntro === '1'?'show':''}}">{{videoData.video.episodeIntro}}</view>
    </view>
    <view class='episode-wrapper'>
      <view class='series-wrapper'>
        <view class='title'>选集</view>
        <view class='text' bindtap='toggleHideEpisode'>{{videoData.video.series}}</view>
      </view>
      <scroll-view scroll-x='true' class='scroll'>
        <view wx:for='{{videoData.video.episodeCount}}' class='episode' data-index='{{item}}' bindtap='togglePlay' wx:key='{{item}}'>
          <text class="text {{item==videoData.video.episodeNum?'hide':''}}">{{item+1}}</text>
          <view class="arrow-right {{item==videoData.video.episodeNum?'':'hide'}}"></view>
        </view>
      </scroll-view>
    </view>

     <view class="hide-episode-wrapper {{videoData.showHideEpisode === '1'?'show':''}}">
      <view class='series-wrapper'>
        <view class='title'>选集</view>
        <view class='text' bindtap='toggleHideEpisode'>关闭</view>
      </view>   
      <view wx:for='{{videoData.video.episodeCount}}' class='episode' data-index='{{item}}' bindtap='togglePlay' wx:key='{{item}}'>
        <text class="text {{item==videoData.video.episodeNum?'hide':''}}">{{item+1}}</text>
        <view class="arrow-right {{item==videoData.video.episodeNum?'':'hide'}}"></view>
      </view> 
    </view> 

  </view>

  <view class="comment-wrapper {{selected === '1'?'content-right':'content-left'}}"> 

    <view class='filter-wrapper'>
      <view class='filter'><text class="text {{commentData.criteria === '1'?'selected':''}}" data-index='1' bindtap='toggleCommentFilter'>最新发表</text></view>
      <view class='filter'><text class="text {{commentData.criteria === '2'?'selected':''}}" data-index='2' bindtap='toggleCommentFilter'>所有评论</text></view>
      <view class='filter'><text class="text {{commentData.criteria === '3'?'selected':''}}" data-index='3' bindtap='toggleCommentFilter'>精华评论</text></view>
    </view>

    <scroll-view class='comment-list' scroll-y bindscrolltolower='loadComments'>
      <comment wx:for='{{commentData.commentList}}' wx:key='{{index}}' commentInfo='{{item}}'></comment>
      <loadingTip canLoadMore='{{commentData.canLoadMore}}'></loadingTip>     
    </scroll-view>

    <view class='input-wrapper'>
      <view class='text'>分享</view>
      <view class='text'>收藏</view>
      <view class='input'>
        <view bindtap='toggleModelInput'>我来评论一下</view>
      </view>
    </view>

  </view>

  <view class="model-input {{commentData.modelInput === '1' ? 'show' : ''}}">
    <view class='text-wrapper'>
      <view class='text'>评论</view>
      <view class='hide-btn' bindtap='toggleModelInput'>∨</view>
    </view>
    <form>
    <view class='text-area'>
      <textarea class='text' auto-focus="{{commentData.modelInput === '1'}}" placeholder='我也来说两句' bindinput='enterComment' value='{{commentData.textArea}}'></textarea>
    </view>
    <button class='commit-btn text' bindtap='commitComment' form-type='reset'>提 交</button>
    </form>
  </view> 
  
</view>
